<?php
session_start();
require_once 'config/database.php';

if (!isset($_SESSION['user_id'])) {
  header("Location: auth/login.php");
  exit();
}

// Get current user data
$stmt = $conn->prepare("SELECT * FROM users WHERE user_id = ?");
$stmt->execute([$_SESSION['user_id']]);
$current_user = $stmt->fetch(PDO::FETCH_ASSOC);

// Handle friend request actions
if (isset($_GET['action'])) {
  $action = $_GET['action'];
  $target_id = isset($_GET['user_id']) ? $_GET['user_id'] : null;

  if ($target_id && $action == 'send_request') {
    // Insert friend request
    $stmt = $conn->prepare("INSERT INTO friend_requests (sender_id, receiver_id, created_at) VALUES (?, ?, NOW())");
    $stmt->execute([$_SESSION['user_id'], $target_id]);
    header("Location: friends.php?sent=1");
    exit();
  }

  if ($target_id && $action == 'accept') {
    // Accept friend request - insert into friends table
    $stmt = $conn->prepare("INSERT INTO friends (user_id1, user_id2, created_at) VALUES (?, ?, NOW())");
    $stmt->execute([$_SESSION['user_id'], $target_id]);

    // Delete the request
    $stmt = $conn->prepare("DELETE FROM friend_requests WHERE sender_id = ? AND receiver_id = ?");
    $stmt->execute([$target_id, $_SESSION['user_id']]);

    header("Location: friends.php?accepted=1");
    exit();
  }

  if ($target_id && $action == 'decline') {
    // Delete the request
    $stmt = $conn->prepare("DELETE FROM friend_requests WHERE sender_id = ? AND receiver_id = ?");
    $stmt->execute([$target_id, $_SESSION['user_id']]);

    header("Location: friends.php?declined=1");
    exit();
  }

  if ($target_id && $action == 'remove') {
    // Delete from friends table (in both directions)
    $stmt = $conn->prepare("DELETE FROM friends WHERE (user_id1 = ? AND user_id2 = ?) OR (user_id1 = ? AND user_id2 = ?)");
    $stmt->execute([$_SESSION['user_id'], $target_id, $target_id, $_SESSION['user_id']]);

    header("Location: friends.php?removed=1");
    exit();
  }
}
?>

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Friends</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">
  <div class="container mx-auto p-4">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">Friends</h1>
      <a href="feed.php" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Back to Feed</a>
    </div>

    <?php if (isset($_GET['sent'])): ?>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        Friend request sent successfully!
      </div>
    <?php endif; ?>

    <?php if (isset($_GET['accepted'])): ?>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        Friend request accepted!
      </div>
    <?php endif; ?>

    <?php if (isset($_GET['declined'])): ?>
      <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded mb-4">
        Friend request declined.
      </div>
    <?php endif; ?>

    <?php if (isset($_GET['removed'])): ?>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        Friend removed.
      </div>
    <?php endif; ?>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <!-- Friend Requests -->
      <div class="bg-white p-4 rounded-lg shadow-md">
        <h2 class="text-xl font-bold mb-3">Friend Requests</h2>
        <?php
        // Get friend requests
        $stmt = $conn->prepare("SELECT fr.*, u.username, u.profile_image
                             FROM friend_requests fr
                             JOIN users u ON fr.sender_id = u.user_id
                             WHERE fr.receiver_id = ?");
        $stmt->execute([$_SESSION['user_id']]);
        $requests = $stmt->fetchAll(PDO::FETCH_ASSOC);

        if (count($requests) > 0):
          foreach ($requests as $request):
        ?>
            <div class="flex items-center justify-between mb-2 p-2 border-b">
              <div class="flex items-center">
                <div class="w-10 h-10 rounded-full overflow-hidden bg-gray-300 mr-3">
                  <?php if ($request['profile_image']): ?>
                    <img src="<?php echo htmlspecialchars($request['profile_image']); ?>" class="w-full h-full object-cover" alt="Profile">
                  <?php else: ?>
                    <div class="w-full h-full flex items-center justify-center text-gray-500 bg-white">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                    </div>
                  <?php endif; ?>
                </div>
                <a href="profile.php?id=<?php echo $request['sender_id']; ?>" class="font-medium"><?php echo htmlspecialchars($request['username']); ?></a>
              </div>
              <div class="flex space-x-2">
                <a href="friends.php?action=accept&user_id=<?php echo $request['sender_id']; ?>" class="bg-green-500 text-white px-3 py-1 rounded text-sm hover:bg-green-600">Accept</a>
                <a href="friends.php?action=decline&user_id=<?php echo $request['sender_id']; ?>" class="bg-red-500 text-white px-3 py-1 rounded text-sm hover:bg-red-600">Decline</a>
              </div>
            </div>
          <?php
          endforeach;
        else:
          ?>
          <p class="text-gray-500">No pending friend requests.</p>
        <?php endif; ?>
      </div>

      <!-- Friends List -->
      <div class="bg-white p-4 rounded-lg shadow-md">
        <h2 class="text-xl font-bold mb-3">My Friends</h2>
        <?php
        // Get friends list
        $stmt = $conn->prepare("
          SELECT u.user_id, u.username, u.profile_image FROM users u
          JOIN friends f ON (f.user_id1 = u.user_id OR f.user_id2 = u.user_id)
          WHERE (f.user_id1 = ? OR f.user_id2 = ?) AND u.user_id != ?
          ORDER BY u.username ASC
        ");
        $stmt->execute([$_SESSION['user_id'], $_SESSION['user_id'], $_SESSION['user_id']]);
        $friends = $stmt->fetchAll(PDO::FETCH_ASSOC);

        if (count($friends) > 0):
          foreach ($friends as $friend):
        ?>
            <div class="flex items-center justify-between mb-2 p-2 border-b">
              <div class="flex items-center">
                <div class="w-10 h-10 rounded-full overflow-hidden bg-gray-300 mr-3">
                  <?php if ($friend['profile_image']): ?>
                    <img src="<?php echo htmlspecialchars($friend['profile_image']); ?>" class="w-full h-full object-cover" alt="Profile">
                  <?php else: ?>
                    <div class="w-full h-full flex items-center justify-center text-gray-500 bg-white">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                    </div>
                  <?php endif; ?>
                </div>
                <a href="profile.php?id=<?php echo $friend['user_id']; ?>" class="font-medium"><?php echo htmlspecialchars($friend['username']); ?></a>
              </div>
              <div>
                <a href="friends.php?action=remove&user_id=<?php echo $friend['user_id']; ?>" class="text-red-500 text-sm hover:underline" onclick="return confirm('Are you sure you want to remove this friend?')">Remove</a>
              </div>
            </div>
          <?php
          endforeach;
        else:
          ?>
          <p class="text-gray-500">You don't have any friends yet.</p>
        <?php endif; ?>
      </div>
    </div>
  </div>
</body>

</html>